#!/bin/bash

cd "$(dirname "$1")"

key="${encrypted_8205d15dd51d_key}"
iv="${encrypted_8205d15dd51d_iv}"
if [ -z "${key}" -o -z "${iv}" ]; then
  exit 0
fi

mkdir -p etc/secret
openssl aes-256-cbc \
        -d -K "${key}" -iv "${iv}" \
        -in etc/deploy_key.json.enc \
        -out etc/secret/deploy_key.json
